<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_containers">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv_favorite_locations"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/pic2"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha=".6"
        android:foreground="@drawable/foreground" />

    <TextView
        android:id="@+id/tv_favorite_location_cityName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/rob_light_italic"
        android:text="London"
        android:textColor="@color/TextAndIconColor"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_favorite_location_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_favorite_location_cityName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/rob_bold"
        android:text="12:43 am"
        android:textColor="@color/TextAndIconColor"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_tv_favorite_location_Degree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:fontFamily="@font/rob_bold_italic"
        android:text="-12 C"
        android:textColor="@color/TextAndIconColor"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/tv_favorite_location_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:fontFamily="@font/rob_italic"
        android:text="Cloudy"
        android:textColor="@color/TextAndIconColor"
        android:textSize="16sp" />
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_favorite_location_lottie"
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:lottie_rawRes="@raw/clear_day"
        android:layout_alignParentBottom="true"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:layout_marginEnd="4dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        android:layout_marginBottom="32dp"
        android:layout_toStartOf="@id/tv_favorite_location_state"/>

</RelativeLayout>



</com.google.android.material.card.MaterialCardView>